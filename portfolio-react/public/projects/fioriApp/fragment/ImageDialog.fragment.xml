<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <Dialog
        showHeader="false"
        type="Standard"
        class="sapUiContentPadding"
    >
        <customHeader>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button
                    icon="sap-icon://decline"
                    press="closeDialog"
                />
            </OverflowToolbar>
        </customHeader>
        <HBox justifyContent="Center">
            <Image src="{oProdDetModel>/code}" />
        </HBox>
    </Dialog>
</core:FragmentDefinition>
