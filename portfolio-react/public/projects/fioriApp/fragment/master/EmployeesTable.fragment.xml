<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <Table
        id="idMasterEmpTable"
        items="{path:'oMasterModel>/tableData', filters:[{path:'isDeleted', operator:'NE', value1:'X'}]}"
        mode="MultiSelect"
        growing="true"
        growingScrollToLoad="true"
    >
        <columns>
            <Column width="3rem">
                <Text text="{i18n>id}" />
            </Column>
            <Column width="10rem">
                <Text text="{i18n>name}" />
            </Column>
            <Column width="5rem">
                <Text text="{i18n>age}" />
            </Column>
            <Column width="5rem">
                <Text text="{i18n>gender}" />
            </Column>
            <Column width="10rem">
                <Text text="{i18n>email}" />
            </Column>
            <Column width="8rem">
                <Text text="{i18n>phNo}" />
            </Column>
            <Column width="8rem">
                <Text text="{i18n>dob}" />
            </Column>
            <Column width="6rem">
                <Text text="{i18n>bloodGrp}" />
            </Column>
            <Column width="15rem">
                <Text text="{i18n>address}" />
            </Column>
            <Column width="10rem">
                <Text text="{i18n>country}" />
            </Column>
            <Column width="10rem">
                <Text text="{i18n>ssn}" />
            </Column>
            <Column width="8rem">
                <Text text="{i18n>role}" />
            </Column>
            <Column width="8rem">
                <Text text="{i18n>designation}" />
            </Column>
            <Column width="10rem">
                <Text text="{i18n>department}" />
            </Column>
            <Column width="10rem">
                <Text text="{i18n>company}" />
            </Column>
            <Column width="15rem">
                <Text text="{i18n>company} {i18n>address}" />
            </Column>
        </columns>
        <ColumnListItem>
            <Text text="{oMasterModel>Employee ID}" />
            <Text text="{oMasterModel>Name}" />
            <Text text="{oMasterModel>Age}" />
            <Text text="{oMasterModel>Gender}" />
            <Text text="{oMasterModel>Email}" />
            <Text text="{oMasterModel>Phone Number}" />
            <Text text="{oMasterModel>Date of Birth}" />
            <Text text="{oMasterModel>Blood Group}" />
            <Text text="{oMasterModel>Address}" />
            <Text text="{oMasterModel>Country}" />
            <Text text="{oMasterModel>SSN}" />
            <Text text="{oMasterModel>Role}" />
            <Text text="{oMasterModel>Designation}" />
            <Text text="{oMasterModel>Department}" />
            <Text text="{oMasterModel>Company}" />
            <Text text="{oMasterModel>Company Address}" />
        </ColumnListItem>
    </Table>
</core:FragmentDefinition>
