<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <Dialog
        showHeader="true"
        title="{oMasterModel>/oRichContent/sRichConTitle}"
        contentWidth="30rem"
        contentHeight="20rem"
    >
        <TextArea
            value="{path:'oMasterModel>/oRichContent/sRichConDetail', formatter:'.formatter.convertJoinToList'}"
            width="95%"
            class="sapUiTinyMargin"
            rows="12"
            change="onChgRichDetails"
        />
        <buttons>
            <Button
                text="{i18n>save}"
                type="Emphasized"
                press="onRichDialogSave"
            />
            <Button
                text="{i18n>cancel}"
                press="onRichDialogClose"
            />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
