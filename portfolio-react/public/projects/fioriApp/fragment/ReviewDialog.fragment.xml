<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <Dialog
        showHeader="true"
        title="{i18n>review} {i18n>product}"
        type="Standard"
        contentWidth="450px"
        class="sapUiContentPadding"
    >
        <VBox>
            <Label
                text="{i18n>rating}: "
                required="true"
            />
            <RatingIndicator
                maxValue="5"
                value="{oProdDetModel>/userRating}"
                iconSize="1.5rem"
                class="sapUiTinyMarginBottom"
            />
            <Label text="Comments: " />
            <TextArea
                growing="true"
                rows="5"
                width="100%"
                value="{oProdDetModel>/userComment}"
            />
        </VBox>
        <buttons>
            <Button
                text="Save"
                type="Emphasized"
                press="onSaveReviewDialog"
            />
            <Button
                text="Cancel"
                press="onCancelReviewDialog"
            />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
