<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
>
    <VBox visible="{=${detailsModel>/isEditing}===false}">
        <f:SimpleForm
            editable="false"
            layout="ResponsiveGridLayout"
            labelSpanXL="4"
            labelSpanL="3"
            labelSpanM="4"
            labelSpanS="12"
            adjustLabelSpan="false"
            emptySpanXL="0"
            emptySpanL="4"
            emptySpanM="0"
            emptySpanS="0"
            columnsXL="2"
            columnsL="1"
            columnsM="1"
            singleContainerFullSize="false"
        >
            <f:content>
                <Label text="{i18n>age}" />
                <Text text="{detailsModel>/details/age}" />
                <Label text="{i18n>gender}" />
                <Text
                    text="{path:'detailsModel>/details/gender', formatter:'.formatter.firstLetterCaps'}"
                />
                <Label text="{i18n>dob}" />
                <Text
                    text="{path:'detailsModel>/details/birthDate', formatter:'.formatter.dateFormatter'}"
                />
                <Label text="{i18n>street}" />
                <Text text="{detailsModel>/details/address/address}" />
                <Label text="{i18n>city}" />
                <Text text="{detailsModel>/details/address/city}" />
                <Label text="{i18n>state}" />
                <Text
                    text="{detailsModel>/details/address/state} {detailsModel>/details/address/stateCode}"
                />
                <Label text="{i18n>postCode}" />
                <Text text="{detailsModel>/details/address/postalCode}" />
                <Label text="{i18n>ssn}" />
                <Text text="{detailsModel>/details/ssn}" />
            </f:content>
        </f:SimpleForm>
    </VBox>
    <VBox visible="{detailsModel>/isEditing}">
        <f:SimpleForm
            editable="true"
            layout="ResponsiveGridLayout"
            labelSpanXL="3"
            labelSpanL="3"
            labelSpanM="3"
            labelSpanS="12"
            adjustLabelSpan="false"
            emptySpanXL="4"
            emptySpanL="4"
            emptySpanM="4"
            emptySpanS="0"
            columnsXL="1"
            columnsL="1"
            columnsM="1"
            singleContainerFullSize="false"
        >
            <f:content>
                <Label text="{i18n>age}" />
                <Input
                    value="{detailsModel>/newDetails/age}"
                    enabled="false"
                />
                <Label text="{i18n>gender}" />
                <Input
                    value="{path:'detailsModel>/newDetails/gender', formatter:'.formatter.firstLetterCaps'}"
                    enabled="false"
                />
                <Label text="{i18n>dob}" />
                <Input
                    value="{path:'detailsModel>/newDetails/birthDate', formatter:'.formatter.dateFormatter'}"
                    enabled="false"
                />
                <Label
                    text="{i18n>street}"
                    required="true"
                />
                <Input
                    value="{detailsModel>/newDetails/address/address}"
                    change="onValueChange"
                    valueState="{path:'detailsModel>/newDetails/address/address', formatter:'.formatter.validateString'}"
                    valueStateText="{path:'detailsModel>/newDetails/address/address', formatter:'.formatter.validateStringText'}"
                />
                <Label
                    text="{i18n>city}"
                    required="true"
                />
                <Input
                    value="{detailsModel>/newDetails/address/city}"
                    change="onValueChange"
                    valueState="{path:'detailsModel>/newDetails/address/city', formatter:'.formatter.validateString'}"
                    valueStateText="{path:'detailsModel>/newDetails/address/city', formatter:'.formatter.validateStringText'}"
                />
                <Label
                    text="{i18n>state}"
                    required="true"
                />
                <Input
                    value="{detailsModel>/newDetails/address/state}"
                    change="onValueChange"
                    valueState="{path:'detailsModel>/newDetails/address/state', formatter:'.formatter.validateString'}"
                    valueStateText="{path:'detailsModel>/newDetails/address/state', formatter:'.formatter.validateStringText'}"
                />
                <Input
                    value="{detailsModel>/newDetails/address/stateCode}"
                    change="onValueChange"
                    maxLength="2"
                    valueState="{path:'detailsModel>/newDetails/address/stateCode', formatter:'.formatter.validateStateCode'}"
                    valueStateText="{path:'detailsModel>/newDetails/address/stateCode', formatter:'.formatter.validateStateCodeText'}"
                >
                    <layoutData>
                        <l:GridData span="XL1 L2 M2 S4" />
                    </layoutData>
                </Input>
                <Label
                    text="{i18n>postCode}"
                    required="true"
                />
                <Input
                    value="{detailsModel>/newDetails/address/postalCode}"
                    change="onValueChange"
                    type="Number"
                    valueState="{path:'detailsModel>/newDetails/address/postalCode', formatter:'.formatter.validatePincode'}"
                    valueStateText="{path:'detailsModel>/newDetails/address/postalCode', formatter:'.formatter.validatePincodeText'}"
                />
                <Label
                    text="{i18n>ssn}"
                    required="true"
                />
                <Input
                    value="{detailsModel>/newDetails/ssn}"
                    change="onValueChange"
                    valueState="{path:'detailsModel>/newDetails/ssn', formatter:'.formatter.validateString'}"
                    valueStateText="{path:'detailsModel>/newDetails/ssn', formatter:'.formatter.validateStringText'}"
                />
            </f:content>
        </f:SimpleForm>
    </VBox>
</core:FragmentDefinition>
