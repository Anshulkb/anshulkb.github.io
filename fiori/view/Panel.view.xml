<mvc:View
    controllerName="ui5.quickstart.controller.Panel"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
>
    <Panel headerText="{i18n>helloPanelTitle}">
        <content>
            <!-- <VBox> -->
            <!-- <Text text="Hello Open UI5" /> -->
            <Button
                press="onOpenDialog"
                text="{i18n>openDialogBtnTxt}"
            />
            <Button
                text="{i18n>showHelloButtonText}"
                press=".onPress"
            />
            <Input
                valueLiveUpdate="true"
                value="{oComponentModel>/recipient/name}"
                description="Hello {oComponentModel>/recipient/name}"
                width="60%"
            />
            <!-- </VBox> -->
        </content>
    </Panel>
</mvc:View>
